<body>

  <% let dropdownMenu = "";
        if(email != ""){
          dropdownMenu = `
          <div class="menu" style="margin-right: 10px;">
            <a href="/profile" class="item">Profile</a>
            <a href="/logout" class="item">Logout</a>
          </div>
          `;
        }
        else if(email == ""){
          dropdownMenu = `
          <div class="menu" style="margin-right: 10px;">
            <a href="/login" class="item">Login/Register</a>
          </div>
          `;
        }
   %>
  
  <div class="ui tabular menu" id="topMenu" style="
        width: 100%;
        z-index: 100;
        font-size: 1.1rem;
        border: none;
        ">
    <a href="/" class="item">
      <img src="images/logo.png" alt="logo" style="width: 60px;" />
      <strong style="font-size: 1.5rem;">Jssconnect</strong>
    </a>
    <div class="right menu">
      <a href="/blogs" class="item ui large secondary tertiary button">
        Blogs
      </a>
      <a href="/resources" class="item ui large secondary tertiary button">
        Resources
      </a>
      <a href="/community" class="item ui large secondary tertiary button">
        Community
      </a>
      <a href="/contribute" class="item ui large secondary tertiary button">
        Contribute
      </a>
      <div class="ui dropdown">
        <a id="userLabel" style="height: fit-content;margin: 6px 10px;" class="ui basic image big label">
          <img src=<%= picture %> />
          <%= username %>
          <i class="dropdown icon" style="margin-left: 10px; margin-right: 0"></i>
        </a>
        <%- dropdownMenu %>
      </div>
      
    </div>
  </div>
  <!-- following navbar -->
  <div class="ui tabular menu" id="followingMenu" style="
        margin: 0;
        background-color: white;
        box-shadow: 0px 0px 2px 0px #999999 !important;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 100;
        font-size: 1.1rem;
        border: none;
        ">
    <a href="/" class="item">
      <img src="images/logo.png" alt="logo" style="width: 60px;" />
      <strong style="font-size: 1.5rem;">Jssconnect</strong>
    </a>
    <div class="right menu">
      <a href="/blogs" class="item ui large secondary tertiary button">
        Blogs
      </a>
      <a href="/resources" class="item ui large secondary tertiary button">
        Resources
      </a>
      <a href="/community" class="item ui large secondary tertiary button">
        Community
      </a>
      <a href="/contribute" class="item ui large secondary tertiary button">
        Contribute
      </a>
      <div class="ui dropdown">
        <a id="userLabel" style="height: fit-content;margin: 6px 10px;" class="ui basic image big label">
          <img src=<%= picture %> />
          <%= username %>
          <i class="dropdown icon" style="margin-left: 10px; margin-right: 0"></i>
        </a>
        <%- dropdownMenu %>
        </div>
      </div>

    </div>
  </div>



  